[Unit]
Description=Command and control cleanup service 
After=network.target

[Service]
Restart=always
AccuracySec=1s
RestartSec=86400
OnUnitInactiveSec=86400
User=root
ExecStart=/opt/scripts/startup/cleanup.sh start
ExecReload=/opt/scripts/startup/cleanup.sh restart
ExecStop=/opt/scripts/startup/cleanup.sh stop

[Install]
WantedBy=default.target